.how-is
    h2
        background var(--mint-green-gradiant, linear-gradient(132deg, #7B999C 0%, #315C70 100%));
        font-size: 28px
        font-weight: 700

    h2, 
    h3
        font-family var(--default-font)
        font-style normal
        line-height normal
        background-clip: text
        -webkit-text-fill-color transparent
    h3
        background var(--laranja-brand-degrad, linear-gradient(135deg, #F87544 0%, #F54B0C 100%))
        font-size 30px
        font-weight 300
        background-clip text
        -webkit-text-fill-color transparent

    h4
        color var(--texto, #315C70);
        text-align: center

        /* list titles */
        font-family var(--default-font)
        font-size 18px
        font-style normal
        font-weight 400
        line-height normal

    p
        color rgba(26, 11, 91, 0.30)
        text-align center

        /* card text */
        font-family var(--default-font)
        font-size 12px
        font-style normal
        font-weight 400
        line-height normal

    a
        display block
        max-width 200px
        margin 0 auto

    article
        border-radius: 10px
        background: #FFF
        max-width 300px
        height 100%
        /* shadow */
        box-shadow 0px 8px 40px 0px rgba(49, 32, 138, 0.05)

        @media screen and (max-width 890px)
            margin-bottom 50px
            height 300px
        
    