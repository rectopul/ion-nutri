body
    > header

        .navigation
            display flex

            .open-menu
                width 40px
                height 40px
                display flex
                justify-content center
                align-items center
                border 0
                color white
                background var(--laranja-brand)
                border-radius 3px
                border 1px solid var(--laranja-brand)
                
            .menu-mobile
                @media screen and (min-width 890px)
                    display none
                > .menu
                    display flex
                    position fixed
                    left 0
                    top  0
                    background white
                    width 100%
                    height 100%
                    z-index 99
                    padding 20px 15px
                    transform translateX(-1000px)
                    transition all .5s linear

                    &.open
                        transition all .5s linear
                        transform translateX(0)

                    > div
                        display flex
                        width 100%

                    ul
                        list-style none
                        display flex
                        flex 0 0 100%
                        flex-direction column
                        padding 0
                        margin 0
                        padding 30px 20px
                        margin-top 10px

                        li
                            margin 5px 0
                            padding 5px 20px
                            padding-bottom 15px
                            border-bottom 1px solid #315C70
                            &:hover
                                background #315C70
                                a
                                    color white

                        a
                            text-decoration none
                            color #315C70

                    .close-menu
                        position absolute
                        top 10px
                        right 10px
                        width 40px
                        height 40px
                        display flex
                        justify-content center
                        align-items center
                        border 0
                        color white
                        background var(--laranja-brand)
                        z-index 999
                        border-radius 3px
                        border 1px solid var(--laranja-brand)

            .menu-mobile
                margin-left auto
            @media screen and (min-width 891px)
                display none
            
            .logo
                height 74px
                img
                    height 74px
                    width auto
            .buy-kit
                background var(--laranja-brand-degrad, linear-gradient(135deg, #F87544 0%, #F54B0C 100%))
                border-radius 3px
                display flex
                padding 9px 40px
                color #fff
                text-decoration none
                transition all 700ms linear

                @media screen and (max-width 568px)
                    margin 0 auto

                &:hover
                    background var(--default_bg)
                    transition all 700ms linear
            nav
                @media screen and (max-width 890px)
                    display none
                flex 1
                > div
                    ul
                        display flex
                        justify-content center
                        list-style none
                        align-items center
                        font-family var(--thirty-font)
                        font-size 16px
                        font-weight 400
                        margin 0
                        padding 0

                        li
                            margin 0 15px

                        a
                            text-decoration none
                            color var(--default_text_color)

                            &:hover
                                color #F87544

        .top_bar
            background: var(--mint-green-gradiant, linear-gradient(132deg, #7B999C 0%, #315C70 100%))
            display flex
            justify-content center
            padding 10px 0
            font-family var(--second-font)
            font-weight 600
            font-style normal
            font-size 14px

            a
                color #fff
                text-decoration none
                margin 0 20px
                &:hover
                    text-decoration underline !important

            svg
                fill #fff

            .cart
                flex 1
                @media screen and (max-width 890px)
                    display flex
                    flex-direction column
                    align-items center
                    text-align center
                    margin 0

            .phones
                @media screen and (max-width 890px)
                    display flex
                    flex-direction column
                    align-items center
                    text-align center
                    margin 0

            .mails
                margin-right 20px
                
                @media screen and (max-width 890px)
                    display flex
                    flex-direction column
                    align-items center
                    text-align center
                    margin 0