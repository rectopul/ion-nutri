.contact
    position relative
    &:before
        content ''
        width 200px
        height 200px
        background-image url(../img/mark.png)
        background-size cover
        top -30px
        right 50px
        position absolute
    &:after
        content ''
        width 200px
        height 200px
        background-image url(../img/mark.png)
        background-size cover
        bottom -30px
        left 50px
        position absolute

    @media screen and (max-width 890px)
        &:after, &:before
            width 80px
            height 80px
            bottom 0

        .default_link
            max-width 100%
            padding 16px 15px
            
        &:before
            right 10px
        &:after
            left 10px
            bottom -80px
            z-index 9

    form
        display flex
        flex-direction column
        max-width 445px

        button
            max-width 120px
            height 40px
            display flex
            justify-content center
            align-items center

        > div
            margin-bottom 30px

            textarea
                width 100%
                height 190px
                background var(--liner-bg, linear-gradient(135deg, #F3F9FF 0%, #F1F0FF 100%))
                padding 15px
                border 1px solid #8990B1
                color #8990B1
                font-family var(--thirty-font)
                font-size 16px
                font-style normal
                font-weight 600
                line-height 30px
                border-radius 5px
                &::placeholder
                    color #8990B1

            input
                width 100%  
                height 50px
                border-radius 5px
                background var(--liner-bg, linear-gradient(135deg, #F3F9FF 0%, #F1F0FF 100%))
                padding 0 10px
                border 1px solid #8990B1
                color #8990B1
                font-family var(--thirty-font)
                font-size 16px
                font-style normal
                font-weight 600
                line-height 30px
                &::placeholder
                    color #8990B1


    span
        margin-bottom 60px
        display flex
        flex-direction column
        h5
            color: #1D3178
            font-family var(--default-font)
            font-size 18px
            font-style normal
            font-weight 400
            line-height normal
        p
            margin 0
            color #A1ABCC
            font-family var(--second-font)
            font-size 16px
            font-style normal
            font-weight 400
            line-height 30px
            text-decoration none
        a
            color #A1ABCC
            font-family var(--second-font)
            font-size 16px
            font-style normal
            font-weight 400
            line-height 30px
            text-decoration none

            &:hover
                color #f87544

    h2
        background var(--mint-green-gradiant, linear-gradient(132deg, #7B999C 0%, #315C70 100%))
        background-clip text
        -webkit-background-clip text
        -webkit-text-fill-color transparent
        font-family var(--default-font)
        font-size 28px
        font-style normal
        font-weight 700
        line-height normal

        &.inf-gerais
            font-size 30px
            font-style normal
            font-weight 300
            line-height normal
            margin-bottom 50px

    h3
        background var(--laranja-brand-degrad, linear-gradient(135deg, #F87544 0%, #F54B0C 100%))
        background-clip text
        -webkit-background-clip text
        -webkit-text-fill-color transparent
        font-family var(--default-font)
        font-size 30px
        font-style normal
        font-weight 300
        line-height normal