.cliente
    position relative

    &:before
        content ''
        width 200px
        height 200px
        background-image url(../img/mark.png)
        background-size cover
        top 10px
        right 40px
        position absolute
    &:after
        content ''
        width 200px
        height 200px
        background-image url(../img/mark.png)
        background-size cover
        bottom -10px
        left 40px
        position absolute

    @media screen and (max-width 890px)
        &:after, &:before
            width 80px
            height 80px
            bottom 0

        .default_link
            max-width 100%
            padding 16px 15px
            
        &:before
            right 10px
        &:after
            left 10px
            bottom -40px

    h3
        color var(--texto, #315C70)
        font-family: var(--default-font)
        font-size 28px
        font-style normal
        font-weight 700
        line-height normal

        @media screen and (max-width 890px)
            font-size 18px

    span
        background var(--laranja-brand-degrad, linear-gradient(135deg, #F87544 0%, #F54B0C 100%))
        background-clip text
        -webkit-background-clip text
        -webkit-text-fill-color transparent
        text-align center
        font-family var(--default-font)
        font-size 18px
        font-style normal
        font-weight 400
        line-height normal

    p
        color var(--texto, #315C70)
        text-align center
        font-family var(--default-font)
        font-size 28px
        font-style normal
        font-weight 700
        line-height normal

        @media screen and (max-width 890px)
            font-size 18px

    figure
        width 86px
        height 86px
        margin 0 auto

        img
            width 100%
            height auto